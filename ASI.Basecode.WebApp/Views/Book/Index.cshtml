@model IEnumerable<ASI.Basecode.Data.Models.Book>

<div class="container pt-5">
    <a asp-controller="Book" asp-action="Create" class="btn btn-outline-primary mb-3">Create Book</a>

    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <h4 class="card-text font-weight-bold">No books to display</h4>
        }
        else
        {
            @foreach (var book in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-text font-weight-bold">@book.Title</h4>
                            <p class="card-text"><b>@book.Description</b></p>
                            <p class="card-text">By <b>@book.Author</b></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@book.CreatedTime.ToString("dd/MM/yyyy")</small>
                            </div>

                            <div class="d-flex flex-column">
                                <div class="mb-2">
                                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id"
                                       class="btn btn-sm btn-outline-primary w-100">Update</a>
                                </div>

                                <div>
                                    <form asp-controller="Book" asp-action="DeleteConfirmed"
                                          asp-route-id="@book.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                                onclick="return confirm('Delete this book?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>